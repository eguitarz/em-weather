<section class="weatherReport">
  <div class="weatherReport-mask"></div>
  <div class="weatherReport-header">
    <h2>{{model.locationName}}</h2>
    {{weather-searchbar placeholder="Search for another city" transitionToLocation="transitionToSearchedLocationHandler" start=start end=end}}
    {{weather-datepicker setStartAt="setStartAtHandler" setEndAt="setEndAtHandler" start=start end=end query="query" }}
    <div class="weatherReport-sunnyPercent">Sunny percent:{{days.sunnyPercent}}%</div>
  </div>
  <div class="weatherReport-daysContainer">
    {{#each day in days}}
      <div class="weatherReport-day">
        <div class="weatherReport-date">{{format-time day.date}}</div>
        <div class="weatherReport-info">
          <div class="weatherReport-icon"><i {{bind-attr class="day.icon"}}></i></div>
          <div class="weatherReport-temprature">{{format-degree day.temperature}}Â°</div>
        </div>
        <div class="weatherReport-percipitation" {{bind-attr style=day.rainfallStyle}}></div>
      </div>
    {{/each}}
  </div>
</section>